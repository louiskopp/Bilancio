<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.CanIAffordPart2"
    android:id="@+id/goal_pop_up">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/can_i_affod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:text="Can I Afford This? "
                android:textAppearance="@android:style/TextAppearance.Large"
                 />

            <TextView
                android:id="@+id/yes_or_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|center"
                android:text="TextView"
                android:textSize="170sp" />

            <TextView
                android:id="@+id/message_about_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:text="TextView"
                android:textAppearance="@android:style/TextAppearance.Large"
                app:layout_constraintBottom_toTopOf="@+id/t"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transaction Details"
                android:textAppearance="@android:style/TextAppearance.Large" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/two_amount_entered_place"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:text="Cost"
                    android:textAppearance="@android:style/TextAppearance.Large"
                    app:layout_constraintBottom_toTopOf="@+id/two_category_place"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/_cost"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="TextView"
                    android:textAppearance="@android:style/TextAppearance.Large"
                    app:layout_constraintBottom_toTopOf="@+id/_category"
                    app:layout_constraintEnd_toEndOf="parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/two_category_place"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:text="Category"
                    android:textAppearance="@android:style/TextAppearance.Large"
                    app:layout_constraintBottom_toTopOf="@+id/two_date_place"
                    app:layout_constraintStart_toStartOf="parent" />


                <TextView
                    android:id="@+id/_category"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="TextView"
                    android:textAppearance="@android:style/TextAppearance.Large"
                    app:layout_constraintBottom_toTopOf="@+id/_date"
                    app:layout_constraintEnd_toEndOf="parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/two_date_place"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:text="Date"
                    android:textAppearance="@android:style/TextAppearance.Large"
                    app:layout_constraintBottom_toTopOf="@+id/_location"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text=""
                    android:textAppearance="@android:style/TextAppearance.Large"
                    app:layout_constraintBottom_toTopOf="@+id/_location"
                    app:layout_constraintEnd_toEndOf="parent" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="120dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/two_location_place"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:text="Location"
                    android:textAppearance="@android:style/TextAppearance.Large"
                    app:layout_constraintBottom_toTopOf="@+id/dont_buy"
                    app:layout_constraintStart_toStartOf="parent" />


                <TextView
                    android:id="@+id/_location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="TextView"
                    android:textAppearance="@android:style/TextAppearance.Large"
                    app:layout_constraintBottom_toTopOf="@+id/buy"
                    app:layout_constraintEnd_toEndOf="parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                >

                <TextView
                    android:id="@+id/dont_buy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:text="DON'T BUY IT"
                    android:textAppearance="@android:style/TextAppearance.Large"
                    android:textColor="?android:attr/textColorSecondary"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/buy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="24dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:textAppearance="@android:style/TextAppearance.Large"
                    android:textColor="?android:attr/textColorSecondary"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </LinearLayout>


        </LinearLayout>


    </ScrollView>

</android.support.constraint.ConstraintLayout>