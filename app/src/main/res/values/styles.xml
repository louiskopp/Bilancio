<resources>

    <!-- Base application theme. -->
    <style name="BlueTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorPrimary2</item>
        <item name="colorPrimary">@color/colorPrimaryDark2</item>
        <item name="colorAccent">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:colorBackground">@color/colorPrimary2</item>
        <item name="android:textColorSecondary">@color/colorAccent2</item>
        <item name="android:textColorSecondaryInverse">@android:color/black</item>
        <item name="android:statusBarColor">?android:attr/colorPrimary</item>
        <item name="android:textColorPrimaryInverse">@android:color/white</item>
        <item name="android:fillColor">@color/blueGood</item>
        <item name="android:colorSecondary">@color/blueOkay</item>
        <item name="android:colorForegroundInverse">@color/blueBad</item>
        <item name="android:timePickerDialogTheme">@style/timePicker</item>
        <item name="android:datePickerDialogTheme">@style/datePicker</item>
    </style>

    <style name="budgetSpinnerLook"
        parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="spinnerLook">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAlignment">inherit</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:gravity">center|top</item>
    </style>

    <style name="smallSpinnerLook">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAlignment">inherit</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:gravity">center|top</item>
    </style>

    <style name="medSpinnerLook">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAlignment">inherit</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:gravity">center|top</item>
    </style>

    <style name="largeSpinnerLook">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAlignment">inherit</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:gravity">center|top</item>
    </style>


    <style name="RedTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimary1</item>
        <item name="colorPrimary">@color/colorPrimaryDark1</item>
        <item name="colorAccent">@android:color/black</item>
        <item name="android:textColorPrimary">@color/colorAccent1</item>
        <item name="android:colorBackground">@color/colorPrimary1</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColorPrimaryInverse">@android:color/white</item>
        <item name="android:textColorSecondaryInverse">@color/colorAccent1</item>
        <item name="android:fillColor">@color/redGood</item>
        <item name="android:colorSecondary">@color/redOkay</item>
        <item name="android:colorForegroundInverse">@color/redBad</item>
        <item name="android:timePickerDialogTheme">@style/timePicker</item>
