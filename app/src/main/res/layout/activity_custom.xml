<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Custom">

    <TextView
        android:id="@+id/next_custom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:text="Next"
        android:textColor="?android:attr/textColorPrimary"
        android:textAppearance="@android:style/TextAppearance.Medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="64dp"
            android:text="Select a Type of Scenario to Build:"
            android:textAppearance="@android:style/TextAppearance.Medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/adjustment"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:text="Adjustment"
            android:gravity="center_vertical"
            android:textColor="?android:attr/textColorSecondary"
            android:textAppearance="@android:style/TextAppearance.Medium" />

        <TextView
            android:id="@+id/adjustment2"
            style="@style/settingsCheckBox"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:text="Adjustment"
            android:gravity="center_vertical"
            android:textColor="?android:attr/textColorSecondary"
            android:textAppearance="@android:style/TextAppearance.Medium" />

        <View
            android:id="@+id/view30"
            android:layout_width="match_parent"
            android:layout_alignParentStart = "true"
            android:background="?android:attr/textColorPrimary"
            android:layout_height="1dp" />

        <TextView
            android:id="@+id/prediction"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="?android:attr/textColorSecondary"
            android:gravity="center_vertical"
            android:text="Prediction"
            android:textAppearance="@android:style/TextAppearance.Medium" />

        <TextView
            android:id="@+id/prediction2"
            style="@style/settingsCheckBox"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:textColor="?android:attr/textColorSecondary"
            android:text="Prediction"
            android:textAppearance="@android:style/TextAppearance.Medium" />

        <View
            android:id="@+id/view31"
            android:layout_width="match_parent"
            android:layout_alignParentStart = "true"
            android:background="?android:attr/textColorPrimary"
            android:layout_height="1dp" />

        <TextView
            android:id="@+id/transaction"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="Transaction"
            android:textColor="?android:attr/textColorSecondary"
            android:textAppearance="@android:style/TextAppearance.Medium" />

        <TextView
            android:id="@+id/transaction2"
            style="@style/settingsCheckBox"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="50dp"
            android:textColor="?android:attr/textColorSecondary"
            android:text="Transaction"
            android:textAppearance="@android:style/TextAppearance.Medium" />

        <View
            android:id="@+id/view32"
            android:layout_width="match_parent"
            android:layout_alignParentStart = "true"
            android:background="?android:attr/textColorPrimary"
            android:layout_height="1dp" />

        <TextView
            android:id="@+id/howMuch"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="How Much"
            android:gravity="center_vertical"
            android:textColor="?android:attr/textColorSecondary"
            android:textAppearance="@android:style/TextAppearance.Medium" />

        <TextView
            android:id="@+id/howMuch2"
            style="@style/settingsCheckBox"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="How Much"
            android:textColor="?android:attr/textColorSecondary"
            android:textAppearance="@android:style/TextAppearance.Medium" />

        <View
            android:id="@+id/view33"
            android:layout_width="match_parent"
            android:layout_alignParentStart = "true"
            android:background="?android:attr/textColorPrimary"
            android:layout_height="1dp" />

        <TextView
            android:id="@+id/customDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:text="Description:"
            android:textAppearance="@android:style/TextAppearance.Medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>