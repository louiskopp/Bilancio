<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cons"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.AdvancedSettings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/wallet_toolbar"
            style="@style/Toolbar"
            android:layout_marginBottom="32dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        </android.support.v7.widget.Toolbar>

        <TextView
            android:id="@+id/budgetSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:text="Budget Settings"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="?android:attr/textColorSecondary" />

        <View
            android:id="@+id/asView1"
            style="@style/lineStyle" />

        <TextView
            android:id="@+id/editBudgets"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:text="Edit All Budgets"
            android:textAppearance="@android:style/TextAppearance.Material"
            android:textSize="14sp" />

        <View
            android:id="@+id/asView2"
            style="@style/lineStyle" />

        <TextView
            android:id="@+id/goto_threshold"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:text="Set Budget Threshold"
            android:textAppearance="@android:style/TextAppearance.Material"
            android:textSize="14sp" />

        <View
            android:id="@+id/asView7"
            style="@style/lineStyle"
            android:layout_marginBottom="32dp" />

        <TextView
            android:id="@+id/userSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:text="User Settings"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="?android:attr/textColorSecondary" />

        <View
            android:id="@+id/asView3"
            style="@style/lineStyle" />

        <TextView
            android:id="@+id/resetPassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:text="Reset Password"
            android:textAppearance="@android:style/TextAppearance.Material"
            android:textSize="14sp" />

        <View
            android:id="@+id/asView4"
            style="@style/lineStyle" />

        <TextView
            android:id="@+id/changeContact"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:text="Change My Helper Contact"
            android:textAppearance="@android:style/TextAppearance.Material"
            android:textSize="14sp" />

        <View
            android:id="@+id/asView5"
            style="@style/lineStyle" />

        <TextView
            android:id="@+id/changeTime"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:text="Change Budget Time Frame"
            android:textAppearance="@android:style/TextAppearance.Material"
            android:textSize="14sp" />

        <View
            android:id="@+id/asView6"
            style="@style/lineStyle"
            android:layout_marginBottom="316dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/scenario_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="?android:attr/colorPrimary"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/scenario_show"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Scenario"
            android:textAppearance="@style/Base.TextAppearance.Widget.AppCompat.ExpandedMenu.Item"
            android:textColor="?android:attr/textColorSecondary" />

        <TextView
            android:id="@+id/calculator"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Calculator"
            android:textColor="?android:attr/textColorSecondary"
            android:textAppearance="@style/Base.TextAppearance.Widget.AppCompat.ExpandedMenu.Item"/>

        <TextView
            android:id="@+id/scenario_goto"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:layout_height="match_parent"
            android:text="Submit Answer"
            android:textColor="?android:attr/textColorSecondary"
            android:gravity="center"
            android:textAppearance="@style/Base.TextAppearance.Widget.AppCompat.ExpandedMenu.Item"
            />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>