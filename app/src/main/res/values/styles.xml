         <item name="android:datePickerDialogTheme">@style/datePicker</item>
     </style>

    <style name="Black" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">#000</item>
        <item name="colorPrimary">@color/colorPrimaryDark4</item>
        <item name="colorAccent">@color/teachModePrimary</item>
        <item name="android:colorBackground">@color/colorPrimaryBlack</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:statusBarColor">?android:attr/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorAccent4</item>
        <item name="android:textColorSecondary">@color/colorOther4</item>
        <item name="android:textColorPrimaryInverse">@color/colorOther4</item>
        <item name="android:textColorSecondaryInverse">@color/colorAccent4</item>
        <item name="android:fillColor">@color/blackGood</item>
        <item name="android:colorSecondary">@color/blackOkay</item>
        <item name="android:colorForegroundInverse">@color/blackBad</item>
        <item name="android:timePickerDialogTheme">@style/timePicker</item>
        <item name="android:datePickerDialogTheme">@style/datePicker</item>
    </style>

    <style name="Colorblind" parent="Theme.AppCompat.Light.NoActionBar">
     <item name="colorPrimaryDark">@color/colorPrimary5</item>
     <item name="colorPrimary">@color/colorPrimary5</item>
     <item name="colorAccent">@color/colorAccent2</item>
        <item name="android:colorBackground">@color/colorPrimary5</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark6</item>
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:textColorPrimaryInverse">#000</item>
        <item name="android:textColorSecondaryInverse">@color/colorPrimaryDark</item>
        <item name="android:fillColor">@color/colorPrimaryDark</item>
        <item name="android:colorSecondary">@color/colorblindOkay</item>
        <item name="android:colorForegroundInverse">@color/blackBad</item>
        <item name="android:iconTint">@color/colorPrimaryDark</item>
        <item name="android:timePickerDialogTheme">@style/timePicker</item>
        <item name="android:datePickerDialogTheme">@style/datePicker</item>
    </style>

    <style name="White" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent2</item>
        <item name="colorPrimaryDark">#FFF</item>
        <item name="colorPrimary">@color/colorPrimaryDark6</item>
        <item name="android:textColorPrimary">#000</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark6</item>
        <item name="android:textColorSecondary">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimaryInverse">@color/colorPrimaryDark</item>
        <item name="android:textColorSecondaryInverse">@android:color/black</item>
        <item name="android:fillColor">@color/whiteGood</item>
        <item name="android:colorSecondary">@color/whiteOkay</item>
        <item name="android:colorForegroundInverse">@color/whiteBad</item>
        <item name="android:timePickerDialogTheme">@style/timePicker</item>
        <item name="android:datePickerDialogTheme">@style/datePicker</item>
    </style>

    <style name="TeachingMode" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/teachModePrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark4</item>
        <item name="colorAccent">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@color/colorAccent1</item>
        <item name="android:textColorPrimaryInverse">@color/colorAccent1</item>
        <item name="android:textColorSecondaryInverse">@android:color/white</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:statusBarColor">@color/teachModePrimary</item>
        <item name="android:fillColor">@color/budgetTotalColor</item>
        <item name="android:colorSecondary">@color/colorAccent1</item>
        <item name="android:colorForegroundInverse">@color/whiteBad</item>
        <item name="android:colorBackground">@color/colorPrimaryDark4</item>
        <item name="android:iconTint">@color/colorAccent1</item>
        <item name="android:timePickerDialogTheme">@style/timePicker</item>
        <item name="android:datePickerDialogTheme">@style/datePicker</item>

    </style>

    <style name="NavBar" parent="Widget.Design.BottomNavigationView">
        <item name= "android:layout_width">0dp</item>
        <item name= "android:layout_height">wrap_content</item>
        <item name= "android:layout_marginBottom">4dp</item>
        <item name= "android:background">?attr/colorPrimary</item>
        <item name= "android:visibility">visible</item>
    </style>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name= "android:layout_width">match_parent</item>
        <item name= "android:layout_height">?android:attr/actionBarSize</item>
        <item name= "android:background">?attr/colorPrimary</item>
        <item name= "android:elevation">4dp</item>
    </style>

    <style name="TextColorPrimary">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="SettingsText">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">Settings</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="writeButton">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_alignParentEnd">true</item>
       <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:background">@drawable/write_white</item>
        <item name="android:backgroundTint">?android:attr/textColorSecondary</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="addButton">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:background">@drawable/addincome_white</item>
        <item name="android:backgroundTint">?android:attr/textColorSecondary</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="moneyInBar">
        <item name= "android:layout_width">wrap_content</item>
        <item name= "android:layout_height">wrap_content</item>
        <item name= "android:text">""</item>
        <item name="android:gravity">top</item>
        <item name= "android:textColor">#FFF</item>
    </style>

    <style name="settingsSwitch" parent="Base.Widget.AppCompat.CompoundButton.Switch">
        <item name= "android:layout_width">match_parent</item>
        <item name= "android:layout_height">35dp</item>
        <item name= "android:layout_marginEnd">8dp</item>
        <item name= "android:layout_marginStart">8dp</item>
        <item name= "android:fontFamily">sans-serif</item>
        <item name= "android:gravity">center_vertical</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:trackTint">@drawable/switch_colors</item>
        <item name="android:thumbTint">@android:color/white</item>
    </style>

    <style name="settingsCheckBox">
        <item name="android:drawableRight">@drawable/checkbox_blue</item>
        <item name="android:drawableTint">?android:attr/textColorSecondary</item>
    </style>

    <style name="settingsHeadings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_marginEnd">8dp</item>
            <item name="android:layout_marginStart">8dp</item>
        <item name="android:fontFamily">sans-serif</item>
            <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
            <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
    </style>

    <style name="lineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:background">?android:attr/textColorSecondary</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="walletLine">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:background">?android:attr/textColorPrimary</item>
    </style>

    <style name="datePicker"
        parent="@style/Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/darker_gray</item>
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:textColorPrimaryInverse">@android:color/black</item>
        <item name="android:textColorSecondaryInverse">@color/colorPrimaryDark</item>
    </style>

    <style name="timePicker"
        parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/darker_gray</item>
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:textColorPrimaryInverse">@android:color/black</item>
        <item name="android:textColorSecondaryInverse">@color/colorPrimaryDark</item>
    </style>

    <style name="popupMenu">
        <item name="android:background">@drawable/rounded_popup</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_centerInParent">true</item>


    </style>


</resources>
